{
  "manifest_version": 3,
  "name": "Bookmarks",
  "version": "1.0.0",
  "description": "Quickly save bookmarks to your personal collection",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["http://localhost:3000/*", "https://*.vercel.app/*", "<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png",
      "128": "android-chrome-192x192.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
